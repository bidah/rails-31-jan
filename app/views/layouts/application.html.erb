<!DOCTYPE html>
<html>
<head>
  <title>Rails31Jan</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= yield %>

    <br>
    <% if params[:action] == "index" %>
      <%= link_to "new producer", new_producer_path, class: "btn btn-default" %>
    <% elsif params[:action] == "new" %>
      <%= link_to "home", producers_path, class: "btn btn-default" %>
    <% else %>
      <%= link_to "home", producers_path, class: "btn btn-default" %>
      <%= link_to "new producer", new_producer_path, class: "btn btn-default" %>
    <% end %>
  </div>
</body>
</html>
